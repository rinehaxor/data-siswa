<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Form Tambah Data Siswa</h2>

      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>

      <form method="post" action="/data">
        <div class="mb-3">
          <label for="nama" class="form-label">Siswa</label>
          <input type="text" class="form-control" id="nama" name="nama" required />
        </div>
        <div class="mb-3">
          <label for="ipa" class="form-label">Nilai IPA</label>
          <input type="text" class="form-control" id="ipa" name="ipa" required />
        </div>
        <div class="mb-3">
          <label for="ips" class="form-label">Nilai IPS</label>
          <input type="text" class="form-control" id="ips" name="ips" required />
        </div>
        <button type="submit" class="btn btn-primary">Tambah Data Siswa</button>
      </form>
    </div>
  </div>
</div>
