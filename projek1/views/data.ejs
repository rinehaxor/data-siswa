<div class="container">
  <div class="row">
    <div class="col-md-8 mt-3">
      <h2>Daftar Data Mahasiswa</h2>
      <a href="/data/add" class="btn btn-primary mb-2">Tambah data Mahasiswa</a>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">NO</th>
            <th scope="col">Nama</th>
            <th scope="col">IPA</th>
            <th scope="col">IPS</th>
          </tr>
        </thead>
        <tbody>
          <% if ( siswas.length === 0) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger fw-bold" role="alert">Data Kosong</div>
            </td>
          </tr>

          <% } %> <% let no = 1 %> <% siswas.forEach(siswa => { %>
          <tr>
            <th scope="row"><%= no++ %></th>
            <td><%= siswa.nama %></td>
            <td><%= siswa.ipa %></td>
            <td><%= siswa.ips %></td>
            <td>
              <a href="/data/edit/<%= siswa.nama %>" class="btn btn-info badge">Ubah</a>
              <form action="/data?_method=DELETE" method="POST" class="d-inline">
                <input type="hidden" name="nama" value="<%= siswa.nama %>" />
                <button
                  type="submit"
                  class="btn btn-danger badge"
                  onclick=" confirm('yakin hapus?')
            "
                >
                  Hapus
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
